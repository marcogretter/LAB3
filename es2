#include <stdio.h>
#define N 3
int main() {
    int M[N][N]={1,2,3,
                 4,5,6,
                 7,8,9};
    int x,i,k,sum=0;
    /*printf("Inserisci un numero:\n");
    scanf("%d",&x);
    
    M[0][0]=x;
    for(i=0;i<N;i++){
        for(k=0;k<N;k++){
            M[i][k]=M[0][0]+i+k;
        }
    }
    for(i=0;i<N;i++){
        for(k=0;k<N;k++){
            printf("%d\t",M[i][k]);
        }
        printf("\n");
    }
    */
//se il numero Ã¨ sulla diagonale
    for(i=0;i<N;i++){
        for(k=0;k<N;k++){
            if(i==k){
                M[i][k]=M[i][k];}
            if(i<k){
                sum=M[i][k]+M[k][i];
                M[i][k]=sum;}
            if(i>k){
                M[i][k]=0;}
        }
    }
    for(i=0;i<N;i++){
        for(k=0;k<N;k++){
            printf("%d\t",M[i][k]);
        }
        printf("\n");
    }
    return 0;
}
